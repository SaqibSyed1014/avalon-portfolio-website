#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Exit on error
set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print status
print_status() {
    echo -e "${GREEN}‚úì $1${NC}"
}

# Function to print error
print_error() {
    echo -e "${RED}‚úó $1${NC}"
    exit 1
}

# Start timing
start_time=$(date +%s)

echo -e "\n${YELLOW}üîç Running pre-commit checks...${NC}\n"

# Run lint-staged
print_status "Running lint-staged..."
if ! npx lint-staged; then
    print_error "lint-staged failed"
fi

# Run ESLint
print_status "Running ESLint..."
if ! npx eslint . --max-warnings 0; then
    print_error "ESLint failed"
fi

# Calculate and display execution time
end_time=$(date +%s)
duration=$((end_time - start_time))
echo -e "\n${GREEN}‚ú® All checks passed in ${duration}s${NC}\n"
